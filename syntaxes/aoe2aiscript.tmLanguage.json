{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AiScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "variable.other.aoe2aiscript.resource",
					"match": "(?<!-)\\b(food|wood|gold|stone)\\b(?!-)"
				},{
					"name": "aoe2aiscript.age",
					"match": "\\b(dark|feudal|castle|imperial)-age\\b"
				},{
					"name": "entity.name.function.aoe2aiscript.command.jump",
					"match": "(?<=\\()\\s*(up-jump-\\w+)"
				},{
					"name": "aoe2aiscript.tech",
					"match": "\\bri-(\\w+-?)+\\b"
				},{
					"name": "constant.numeric.aoe2aiscript",
					"match": "\\s-?\\d+(?!-)"
				},{
					"name": "keyword.control.aoe2aiscript.defconst",
					"match": "\\b(defconst)\\b"
				},{
					"name": "keyword.control.aoe2aiscript.defaultaction",
					"match": "\\b(disable-self|do-nothing)\\b"
				},{
					"name": "keyword.control.aoe2aiscript.loadifelse",
					"match": "(#else|#end-if|#load-if-(not-)*defined)"
				},{
					"name": "keyword.control.aoe2aiscript.loadfile",
					"match": "(?<=\\()\\s*(load|load-random)(?=\\s)"
				},{
					"name": "keyword.control.aoe2aiscript.control",
					"match": "(?<!-)(?<=\\()\\s*\\b(and|nand|nor|not|or)\\b(?!-)"
				},{
					"name": "storage.type.aoe2aiscript.defrule",
					"match": "(?<=\\()\\s*\\b(defrule)\\b"
				},{
					"name": "constant.language.aoe2aiscript.truefalse",
					"match": "\\b(true|false)\\b"
				},{
					"name": "support.type.aoe2aiscript.yields",
					"match": "=>"
				},{
					"name": "entity.name.function.aoe2aiscript.command",
					"match": "(?<=\\()\\s*(\\w+-?)+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.aoe2aiscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aoe2aiscript",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.semicolon",
			"begin": ";",
			"end": "$",
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.per"
}