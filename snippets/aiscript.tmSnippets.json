{
	"Add rule": {
		"prefix": "addrule",
		"body": [
			"(defrule",
			"\t(${fact})",
			"\t=>",
			"\t(${action})",
			")"
		],
		"description": "Boilerplate for a new rule"
	},
	"Action rule": {
		"prefix": "actrule",
		"body": [
			"(defrule",
			"\t(can-${1|build,research,train|} ${object})",
			"\t=>",
			"\t(${1} ${object})",
			")"
		],
		"description": "Rule to take an action (choose action)"
	},
	"Build rule": {
		"prefix": "buildrule",
		"body": [
			"(defrule",
			"\t(can-build ${building})",
			"\t=>",
			"\t(build ${building})",
			")"
		],
		"description": "Generic train rule"
	},
	"Research rule": {
		"prefix": "researchrule",
		"body": [
			"(defrule",
			"\t(can-research ${tech})",
			"\t=>",
			"\t(research ${tech})",
			")"
		],
		"description": "Generic research rule"
	},
	"Train rule": {
		"prefix": "trainrule",
		"body": [
			"(defrule",
			"\t(can-train ${unit})",
			"\t=>",
			"\t(train ${unit})",
			")"
		],
		"description": "Generic train rule"
	}
}